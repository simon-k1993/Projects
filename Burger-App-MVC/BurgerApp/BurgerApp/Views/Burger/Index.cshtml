@using BurgerApp.ViewModels.BurgerViewModels;
@model List<BurgerViewModel>

<div class="text-center">
    <h2 class="display-4">List of Burgers:</h2>
    <a class="btn btn-primary mt-3" asp-controller="Burger" asp-action="AddBurger">Add Burger</a>
</div>

<div class="row justify-content-center mt-4">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h3 class="card-title">@Model.ElementAt(i).BurgerName</h3>
                    <div class="table-responsive">
                        <table class="table table-dark mb-0">
                            <tbody>
                                <tr>
                                    <th scope="row">Price</th>
                                    <td>$@Model.ElementAt(i).Price</td>
                                </tr>
                                <tr>
                                    <th scope="row">Is Vegetarian</th>
                                    <td>@(Model.ElementAt(i).IsVegetarian ? "Yes" : "No")</td>
                                </tr>
                                <tr>
                                    <th scope="row">Is Vegan</th>
                                    <td>@(Model.ElementAt(i).IsVegan ? "Yes" : "No")</td>
                                </tr>
                                <tr>
                                    <th scope="row">Has Fries</th>
                                    <td>@(Model.ElementAt(i).HasFries ? "Yes" : "No")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a class="btn btn-warning btn-sm" asp-controller="Burger" asp-action="EditBurger" asp-route-id="@Model[i].Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Burger" asp-action="DeleteBurger" asp-route-id="@Model[i].Id">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
