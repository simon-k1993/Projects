@using BurgerApp.ViewModels.OrderViewModels;
@model OrderFormViewModel

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <form asp-action="CreateOrder" method="post" class="p-4 shadow rounded bg-light">
            <h2 class="text-center mb-4">Create Order</h2>
            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" placeholder="Enter your address" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="IsDelivered" class="form-check-label">Delivered</label>
                <input asp-for="IsDelivered" type="checkbox" class="form-check-input ms-2" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="BurgerName" class="control-label">Burger Name</label>
                <input asp-for="BurgerName" class="form-control" placeholder="Enter the burger name" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Location" class="control-label">Location</label>
                <input asp-for="Location" class="form-control" placeholder="Enter the location" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Save Order</button>
            </div>
        </form>
    </div>
</div>

