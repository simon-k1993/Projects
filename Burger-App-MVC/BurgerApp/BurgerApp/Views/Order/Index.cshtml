@using BurgerApp.ViewModels.OrderViewModels;
@model List<OrderViewModel>

<div class="text-center">
    <h2 class="display-4">List of Orders:</h2>
    <a class="btn btn-primary mt-3" asp-controller="Order" asp-action="CreateOrder">Create New Order</a>
</div>

<div class="row justify-content-center mt-4">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h3 class="card-title">@Model.ElementAt(i).FullName</h3>
                    <div class="table-responsive">
                        <table class="table table-dark mb-0">
                            <tbody>
                                <tr>
                                    <th scope="row">Address</th>
                                    <td>@Model.ElementAt(i).Address</td>
                                </tr>
                                <tr>
                                    <th scope="row">Is Delivered</th>
                                    <td>@(Model.ElementAt(i).IsDelivered ? "Yes" : "No")</td>
                                </tr>
                                <tr>
                                    <th scope="row">Location</th>
                                    <td>@Model.ElementAt(i).Location</td>
                                </tr>
                                <tr>
                                    <th scope="row">Burger Name</th>
                                    <td>@Model.ElementAt(i).BurgerName</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3 d-flex justify-content-between">
                        <a class="btn btn-warning btn-sm" asp-controller="Order" asp-action="EditOrder" asp-route-id="@Model[i].Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@Model[i].Id">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


